<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle"
            android:dither="true">

            <corners
                android:radius="2dp" />

            <solid android:color="#CFCFCF" />

        </shape>
    </item>

    <item
        android:top="0.8dp"
        android:bottom="0.8dp"
        android:left="0.8dp"
        android:right="0.8dp">
        <shape
            android:shape="rectangle"
            android:dither="true">

            <corners
                android:radius="2dp" />

            <solid android:color="#FFFFFF" />

            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
        </shape>
    </item>
</layer-list>